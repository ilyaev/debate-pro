{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "jsx": "react-jsx"
    },
    "include": [
        "server/**/*.ts",
        "server/**/*.tsx",
        "client/src/components/report/PerformanceCard.tsx",
        "client/src/components/report/cards/**/*.tsx",
        "client/src/types.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}